/* ===== 全局CSS变量定义 ===== */
page {
  /* 主色调 */
  --primary-color: #007AFF;
  --primary-light: #5AC8FA;
  --primary-dark: #0056CC;
  
  /* 辅助色 */
  --success-color: #34C759;
  --success-light: #30D158;
  --warning-color: #FF9500;
  --warning-light: #FFAD33;
  --danger-color: #FF3B30;
  --danger-light: #FF6961;
  
  /* 中性色 */
  --text-primary: #1D1D1F;
  --text-secondary: #86868B;
  --text-tertiary: #C7C7CC;
  --text-white: #FFFFFF;
  
  /* 背景色 */
  --bg-primary: #FFFFFF;
  --bg-secondary: #F8F9FA;
  --bg-tertiary: #F2F2F7;
  --bg-quaternary: #E5E5EA;
  
  /* 边框色 */
  --border-light: rgba(0, 0, 0, 0.04);
  --border-medium: rgba(0, 0, 0, 0.08);
  --border-heavy: rgba(0, 0, 0, 0.12);
  
  /* 阴影 */
  --shadow-light: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  --shadow-medium: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-heavy: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  --shadow-primary: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
  --shadow-success: 0 4rpx 16rpx rgba(52, 199, 89, 0.3);
  
  /* 圆角 */
  --radius-small: 12rpx;
  --radius-medium: 16rpx;
  --radius-large: 20rpx;
  --radius-xlarge: 24rpx;
  --radius-xxlarge: 32rpx;
  
  /* 字体大小 */
  --font-size-xs: 20rpx;
  --font-size-sm: 24rpx;
  --font-size-base: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  --font-size-2xl: 44rpx;
  --font-size-3xl: 48rpx;
  --font-size-4xl: 56rpx;
  --font-size-5xl: 64rpx;
  
  /* 字体权重 */
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  --font-weight-heavy: 800;
  
  /* 间距 */
  --spacing-xs: 8rpx;
  --spacing-sm: 12rpx;
  --spacing-base: 16rpx;
  --spacing-lg: 24rpx;
  --spacing-xl: 32rpx;
  --spacing-2xl: 40rpx;
  --spacing-3xl: 48rpx;
  --spacing-4xl: 60rpx;
  
  /* 过渡动画 */
  --transition-fast: 0.2s ease;
  --transition-base: 0.3s ease;
  --transition-slow: 0.4s ease;
  --transition-bounce: 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* ===== 全局基础样式 ===== */
page {
  background-color: var(--bg-secondary);
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Helvetica Neue', sans-serif;
  line-height: 1.4;
  color: var(--text-primary);
}

/* ===== 卡片组件 ===== */
.card {
  background: var(--bg-primary);
  border-radius: var(--radius-xlarge);
  margin: var(--spacing-lg) var(--spacing-xl);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-medium);
  border: 1rpx solid var(--border-light);
  transition: var(--transition-fast);
}

.card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-light);
}

.card-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  margin-bottom: var(--spacing-xl);
  letter-spacing: -0.5rpx;
}

.card-subtitle {
  font-size: var(--font-size-base);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-lg);
  line-height: 1.5;
}

/* ===== 按钮组件 ===== */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  border: none;
  border-radius: var(--radius-xlarge);
  font-weight: var(--font-weight-semibold);
  transition: var(--transition-bounce);
  position: relative;
  overflow: hidden;
}

.btn:active {
  transform: scale(0.98);
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s;
}

.btn:active::before {
  left: 100%;
}

/* 主要按钮 */
.btn-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: var(--text-white);
  padding: var(--spacing-base) var(--spacing-3xl);
  font-size: var(--font-size-lg);
  box-shadow: var(--shadow-primary);
}

.btn-primary:active {
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.4);
}

/* 次要按钮 */
.btn-secondary {
  background: var(--bg-tertiary);
  color: var(--primary-color);
  padding: var(--spacing-base) var(--spacing-3xl);
  font-size: var(--font-size-base);
  border: 2rpx solid var(--bg-quaternary);
}

.btn-secondary:active {
  background: var(--bg-quaternary);
}

/* 成功按钮 */
.btn-success {
  background: linear-gradient(135deg, var(--success-color) 0%, var(--success-light) 100%);
  color: var(--text-white);
  padding: var(--spacing-base) var(--spacing-3xl);
  font-size: var(--font-size-lg);
  box-shadow: var(--shadow-success);
}

/* 警告按钮 */
.btn-warning {
  background: linear-gradient(135deg, var(--warning-color) 0%, var(--warning-light) 100%);
  color: var(--text-white);
  padding: var(--spacing-base) var(--spacing-3xl);
  font-size: var(--font-size-lg);
  box-shadow: 0 4rpx 16rpx rgba(255, 149, 0, 0.3);
}

/* 危险按钮 */
.btn-danger {
  background: linear-gradient(135deg, var(--danger-color) 0%, var(--danger-light) 100%);
  color: var(--text-white);
  padding: var(--spacing-base) var(--spacing-3xl);
  font-size: var(--font-size-lg);
  box-shadow: 0 4rpx 16rpx rgba(255, 59, 48, 0.3);
}

/* 小尺寸按钮 */
.btn-small {
  padding: var(--spacing-sm) var(--spacing-lg);
  font-size: var(--font-size-sm);
  border-radius: var(--radius-large);
}

/* 大尺寸按钮 */
.btn-large {
  padding: var(--spacing-lg) var(--spacing-4xl);
  font-size: var(--font-size-xl);
  border-radius: var(--radius-xxlarge);
}

/* 块级按钮 */
.btn-block {
  width: 100%;
}

/* ===== 输入框组件 ===== */
.input-group {
  margin-bottom: var(--spacing-xl);
}

.input-label {
  font-size: var(--font-size-base);
  color: var(--text-primary);
  margin-bottom: var(--spacing-base);
  font-weight: var(--font-weight-medium);
  display: block;
}

.input-field {
  width: 100%;
  background: var(--bg-tertiary);
  border-radius: var(--radius-medium);
  padding: var(--spacing-base) var(--spacing-lg);
  font-size: var(--font-size-lg);
  border: 2rpx solid transparent;
  color: var(--text-primary);
  transition: var(--transition-fast);
  box-sizing: border-box;
}

.input-field:focus {
  border-color: var(--primary-color);
  background: var(--bg-primary);
  box-shadow: 0 0 0 6rpx rgba(0, 122, 255, 0.1);
  outline: none;
}

.input-field::placeholder {
  color: var(--text-secondary);
}

/* 输入框状态 */
.input-field.error {
  border-color: var(--danger-color);
  background: rgba(255, 59, 48, 0.05);
}

.input-field.success {
  border-color: var(--success-color);
  background: rgba(52, 199, 89, 0.05);
}

/* 输入框尺寸 */
.input-small {
  padding: var(--spacing-sm) var(--spacing-base);
  font-size: var(--font-size-base);
}

.input-large {
  padding: var(--spacing-lg) var(--spacing-xl);
  font-size: var(--font-size-xl);
}

/* ===== 选择器组件 ===== */
.picker-field {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: var(--bg-tertiary);
  border: 2rpx solid transparent;
  border-radius: var(--radius-medium);
  padding: var(--spacing-base) var(--spacing-lg);
  transition: var(--transition-fast);
}

.picker-field:active {
  background: var(--bg-quaternary);
  transform: scale(0.98);
}

.picker-text {
  font-size: var(--font-size-lg);
  color: var(--text-primary);
  font-weight: var(--font-weight-medium);
}

.picker-arrow {
  font-size: var(--font-size-base);
  color: var(--text-secondary);
  font-weight: var(--font-weight-semibold);
}

/* ===== 导航栏组件 ===== */
.nav-header {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  padding: 80rpx var(--spacing-xl) 60rpx;
  text-align: center;
  color: var(--text-white);
  position: relative;
  overflow: hidden;
}

.nav-header::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
  animation: float 8s ease-in-out infinite;
}

.nav-title {
  font-size: var(--font-size-3xl);
  font-weight: var(--font-weight-bold);
  margin-bottom: var(--spacing-sm);
  letter-spacing: -0.5rpx;
  position: relative;
  z-index: 1;
}

.nav-subtitle {
  font-size: var(--font-size-base);
  opacity: 0.9;
  font-weight: var(--font-weight-normal);
  position: relative;
  z-index: 1;
}

/* ===== 结果展示组件 ===== */
.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-lg) 0;
  border-bottom: 1rpx solid var(--bg-quaternary);
}

.result-item:last-child {
  border-bottom: none;
}

.result-label {
  font-size: var(--font-size-base);
  color: var(--text-secondary);
  font-weight: var(--font-weight-medium);
}

.result-value {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--primary-color);
}

/* ===== 徽章组件 ===== */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xs) var(--spacing-base);
  border-radius: var(--radius-large);
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-semibold);
  line-height: 1;
}

.badge-primary {
  background: var(--primary-color);
  color: var(--text-white);
}

.badge-success {
  background: var(--success-color);
  color: var(--text-white);
}

.badge-warning {
  background: var(--warning-color);
  color: var(--text-white);
}

.badge-danger {
  background: var(--danger-color);
  color: var(--text-white);
}

.badge-light {
  background: var(--bg-tertiary);
  color: var(--text-primary);
}

/* ===== 分割线组件 ===== */
.divider {
  height: 1rpx;
  background: var(--bg-quaternary);
  margin: var(--spacing-lg) 0;
}

.divider-thick {
  height: 2rpx;
  background: var(--bg-quaternary);
  margin: var(--spacing-xl) 0;
}

