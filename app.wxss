/* iOS 风格全局样式 */
page {
  background-color: #F8F8F8;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Helvetica Neue', sans-serif;
  line-height: 1.4;
}

/* iOS 卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 20rpx;
  margin: 24rpx 32rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1C1C1E;
  margin-bottom: 32rpx;
  letter-spacing: -0.5rpx;
}

/* iOS 按钮样式 */
.btn-primary {
  background: #007AFF;
  color: #FFFFFF;
  border-radius: 24rpx;
  padding: 28rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
  transition: all 0.2s ease;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.4);
}

.btn-secondary {
  background: #F2F2F7;
  color: #007AFF;
  border-radius: 24rpx;
  padding: 26rpx 46rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s ease;
}

.btn-secondary:active {
  background: #E5E5EA;
  transform: scale(0.98);
}

/* iOS 输入框样式 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 30rpx;
  color: #3C3C43;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-field {
  background: #F2F2F7;
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  font-size: 32rpx;
  border: 2rpx solid transparent;
  color: #1C1C1E;
  transition: all 0.2s ease;
}

.input-field:focus {
  border-color: #007AFF;
  background: #FFFFFF;
  box-shadow: 0 0 0 6rpx rgba(0, 122, 255, 0.1);
}

/* iOS 结果展示 */
.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #E5E5EA;
}

.result-item:last-child {
  border-bottom: none;
}

.result-label {
  font-size: 30rpx;
  color: #8E8E93;
  font-weight: 500;
}

.result-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #007AFF;
}

/* iOS 分割线 */
.divider {
  height: 1rpx;
  background: #E5E5EA;
  margin: 24rpx 0;
}

/* iOS 工具类 */
.text-center {
  text-align: center;
}

.mt-16 {
  margin-top: 32rpx;
}

.mt-20 {
  margin-top: 40rpx;
}

.mb-16 {
  margin-bottom: 32rpx;
}

.mb-20 {
  margin-bottom: 40rpx;
}

.flex {
  display: flex;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

/* iOS 页面过渡动画 */
.page-enter {
  animation: slideInRight 0.3s ease-out;
}

@keyframes slideInRight {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

/* iOS 触觉反馈样式 */
.haptic-light:active {
  transform: scale(0.98);
}

.haptic-medium:active {
  transform: scale(0.96);
}

/* iOS 安全区域适配 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}