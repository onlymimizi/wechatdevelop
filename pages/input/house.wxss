/* 模板提示 */
.template-tip {
  margin: 20rpx 40rpx 0;
  background: linear-gradient(135deg, #E3F2FD 0%, #F3E5F5 100%);
  border: 2rpx solid #2196F3;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #1565C0;
  font-weight: 500;
  flex: 1;
}

.container {
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* 材料信息头部 */
.material-header {
  background: linear-gradient(135deg, #007AFF 0%, #5AC8FA 100%);
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.material-badge {
  background: rgba(255, 255, 255, 0.2);
  color: #FFFFFF;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  backdrop-filter: blur(10rpx);
}

.material-info {
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
  font-weight: 500;
}

/* 添加房间按钮 */
.add-room-btn {
  background: #F2F2F7;
  color: #007AFF;
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.2s ease;
}

.add-room-btn:active {
  background: #E5E5EA;
  transform: scale(0.95);
}

.add-icon {
  font-size: 28rpx;
  font-weight: 700;
}

/* 房间卡片 */
.room-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.room-card {
  background: #F2F2F7;
  border-radius: 24rpx;
  padding: 32rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.room-card:focus-within {
  border-color: #007AFF;
  background: #FFFFFF;
  box-shadow: 0 0 0 6rpx rgba(0, 122, 255, 0.1);
}

.room-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.room-name-input {
  flex: 1;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #1C1C1E;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.room-name-input:focus {
  border-color: #007AFF;
  box-shadow: 0 0 0 6rpx rgba(0, 122, 255, 0.1);
}

.delete-room-btn {
  width: 56rpx;
  height: 56rpx;
  background: #FF3B30;
  color: #FFFFFF;
  border-radius: 28rpx;
  border: none;
  margin-left: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.delete-room-btn:active {
  transform: scale(0.9);
}

/* 尺寸输入 */
.dimension-inputs {
  margin-top: 24rpx;
}

.dimension-row {
  display: flex;
  align-items: flex-end;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.dimension-input {
  flex: 1;
  position: relative;
}

.dimension-label {
  font-size: 26rpx;
  color: #8E8E93;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.dimension-field {
  width: 100%;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx 40rpx 20rpx 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #1C1C1E;
  border: 2rpx solid transparent;
  text-align: center;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

.dimension-field:focus {
  border-color: #007AFF;
  box-shadow: 0 0 0 6rpx rgba(0, 122, 255, 0.1);
}

.dimension-unit {
  position: absolute;
  right: 16rpx;
  bottom: 22rpx;
  font-size: 24rpx;
  color: #8E8E93;
  font-weight: 500;
}

.multiply-symbol {
  font-size: 40rpx;
  color: #8E8E93;
  font-weight: 600;
  padding-bottom: 20rpx;
  flex-shrink: 0;
}

/* 面积结果 */
.area-result {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.area-label {
  font-size: 28rpx;
  color: #8E8E93;
  font-weight: 500;
}

.area-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #007AFF;
}

/* 高级选项 */
.advanced-section {
  border-top: 2rpx solid #E5E5EA;
  padding-top: 24rpx;
  margin-top: 24rpx;
}

.advanced-header {
  margin-bottom: 24rpx;
}

.advanced-title {
  font-size: 28rpx;
  color: #8E8E93;
  font-weight: 600;
}

.input-wrapper {
  position: relative;
}

.input-unit {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 26rpx;
  color: #8E8E93;
  font-weight: 500;
}

/* 单位选择器 */
.unit-selector {
  display: flex;
  background: #F2F2F7;
  border-radius: 24rpx;
  padding: 8rpx;
  gap: 8rpx;
}

.unit-option {
  flex: 1;
  background: transparent;
  border: none;
  padding: 20rpx;
  font-size: 28rpx;
  color: #8E8E93;
  border-radius: 16rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.unit-option.active {
  background: #007AFF;
  color: #FFFFFF;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
}

/* 汇总卡片 */
.summary-card {
  background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
  border-radius: 24rpx;
  margin: 24rpx 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(52, 199, 89, 0.3);
}

.summary-header {
  background: rgba(255, 255, 255, 0.1);
  padding: 24rpx 32rpx;
  backdrop-filter: blur(10rpx);
}

.summary-title {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 700;
}

.summary-content {
  padding: 32rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.summary-item:last-child {
  margin-bottom: 0;
}

.summary-item.final {
  margin-top: 16rpx;
}

.summary-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.summary-value {
  font-size: 30rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.summary-value.deduct {
  color: rgba(255, 255, 255, 0.8);
}

.summary-value.highlight {
  font-size: 36rpx;
  font-weight: 700;
}

/* iOS 选择器 */
.ios-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.ios-picker:active {
  background: #F2F2F7;
}

.picker-text {
  font-size: 30rpx;
  color: #1C1C1E;
  font-weight: 500;
}

.picker-arrow {
  font-size: 28rpx;
  color: #C7C7CC;
  font-weight: 600;
}

/* 操作区域 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, #FFFFFF 0%, #FFFFFF 80%, rgba(255, 255, 255, 0.9) 100%);
  padding: 32rpx;
  backdrop-filter: blur(20rpx);
}

.btn-primary.disabled {
  background: #E5E5EA;
  color: #8E8E93;
  box-shadow: none;
}

.btn-primary.disabled:active {
  transform: none;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
}

.btn-arrow {
  font-size: 28rpx;
  font-weight: 600;
  transition: transform 0.2s ease;
}

.btn-primary:not(.disabled):active .btn-arrow {
  transform: translateX(8rpx);
}

/* 免责声明 */
.disclaimer {
  margin: 24rpx 32rpx;
  background: #FFF9E6;
  border: 2rpx solid #FFD60A;
  border-radius: 16rpx;
  padding: 24rpx;
}

.disclaimer-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #FF9500;
  margin-bottom: 12rpx;
}

.disclaimer-title .ios-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.disclaimer-text {
  font-size: 24rpx;
  color: #8B6914;
  line-height: 1.5;
}

/* 缺失的样式类 */
.card {
  background: #FFFFFF;
  border-radius: 24rpx;
  margin: 24rpx 32rpx;
  padding: 32rpx;
  border: 2rpx solid #F2F2F7;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 24rpx;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mb-16 {
  margin-bottom: 16rpx;
}

.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 28rpx;
  color: #8E8E93;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx 60rpx 20rpx 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #1C1C1E;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.input-field:focus {
  border-color: #007AFF;
  box-shadow: 0 0 0 6rpx rgba(0, 122, 255, 0.1);
}

.divider {
  height: 2rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 16rpx 0;
}

.btn-primary {
  width: 100%;
  background: linear-gradient(135deg, #007AFF 0%, #0056CC 100%);
  color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 122, 255, 0.3);
  transition: all 0.2s ease;
}

.btn-primary:active {
  transform: scale(0.98);
}

.haptic-light,
.haptic-medium {
  /* 触觉反馈样式占位 */
}

.page-enter {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

.ios-icon {
  font-size: 20rpx;
  line-height: 1;
  display: inline-block;
}

