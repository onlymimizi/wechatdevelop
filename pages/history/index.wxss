.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 页面头部 */
.page-header {
  padding: 60rpx 32rpx 40rpx;
  text-align: center;
  background: linear-gradient(135deg, #007AFF 0%, #5AC8FA 100%);
  color: #FFFFFF;
  margin-bottom: 32rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  letter-spacing: -1rpx;
}

.page-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  font-weight: 400;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  color: #1C1C1E;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #8E8E93;
  margin-bottom: 60rpx;
  line-height: 1.4;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
}

.btn-arrow {
  font-size: 28rpx;
  font-weight: 600;
  margin-left: 12rpx;
  transition: transform 0.2s ease;
}

.btn-primary:active .btn-arrow {
  transform: translateX(8rpx);
}

/* 记录容器 */
.records-container {
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 记录卡片 */
.record-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.record-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 记录头部 */
.record-header {
  padding: 32rpx 32rpx 24rpx;
  background: linear-gradient(135deg, #F2F2F7 0%, #E5E5EA 100%);
}

.material-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.material-badge {
  background: #007AFF;
  color: #FFFFFF;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.record-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.record-time {
  font-size: 26rpx;
  color: #8E8E93;
  font-weight: 500;
}

.advanced-indicator {
  background: #FF9500;
  color: #FFFFFF;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.advanced-text {
  font-weight: 600;
}

/* 记录主体 */
.record-body {
  padding: 32rpx;
}

/* 主要结果 */
.main-result {
  text-align: center;
  margin-bottom: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
  border-radius: 20rpx;
  color: #FFFFFF;
}

.result-label {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.result-amount {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 8rpx;
}

.amount-number {
  font-size: 56rpx;
  font-weight: 800;
  line-height: 1;
}

.amount-unit {
  font-size: 28rpx;
  font-weight: 600;
  opacity: 0.9;
}

/* 详细信息网格 */
.detail-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.detail-item {
  background: #F2F2F7;
  border-radius: 16rpx;
  padding: 20rpx;
  text-align: center;
}

.detail-label {
  font-size: 24rpx;
  color: #8E8E93;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.detail-value {
  font-size: 26rpx;
  color: #1C1C1E;
  font-weight: 600;
}

/* 房间标签 */
.room-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.room-tag {
  background: #E3F2FD;
  color: #007AFF;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: 1rpx solid rgba(0, 122, 255, 0.2);
}

/* 操作按钮 */
.record-actions {
  display: flex;
  border-top: 1rpx solid #E5E5EA;
  background: #F8F8F8;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 16rpx;
  background: transparent;
  border: none;
  border-right: 1rpx solid #E5E5EA;
  transition: all 0.2s ease;
}

.action-btn:last-child {
  border-right: none;
}

.action-btn:active {
  background: #E5E5EA;
}

.action-btn.recalc {
  color: #007AFF;
}

.action-btn.copy {
  color: #34C759;
}

.action-btn.delete {
  color: #FF3B30;
}

.action-icon {
  font-size: 28rpx;
}

.action-text {
  font-size: 24rpx;
  font-weight: 600;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E5E5EA;
  border-top: 4rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #8E8E93;
  font-weight: 500;
}

/* 加载更多 */
.load-more-section {
  padding: 40rpx 32rpx;
  text-align: center;
}

.load-more-btn {
  background: #F2F2F7;
  color: #007AFF;
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.2s ease;
}

.load-more-btn:active {
  background: #E5E5EA;
  transform: scale(0.95);
}

.load-more-btn:disabled {
  color: #8E8E93;
  background: #E5E5EA;
}

.load-more-text {
  font-size: 28rpx;
  font-weight: 600;
}