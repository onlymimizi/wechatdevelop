/* iOS 风格图标样式 */
.ios-icon {
  font-size: 20rpx;
  line-height: 1;
  display: inline-block;
}

/* 全局样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F8F9FA 0%, #FFFFFF 100%);
  padding-bottom: 40rpx;
}

/* 顶部导航栏 */
.nav-header {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  background: #FFFFFF;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.nav-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 8rpx;
}

.nav-subtitle {
  font-size: 28rpx;
  color: #86868B;
  font-weight: 400;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-illustration {
  position: relative;
  margin-bottom: 48rpx;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.6;
  position: relative;
  z-index: 2;
}

.empty-decoration {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(0, 122, 255, 0.1) 0%, transparent 70%);
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

.empty-content {
  margin-bottom: 60rpx;
}

.empty-title {
  font-size: 36rpx;
  color: #1D1D1F;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #86868B;
  line-height: 1.4;
}

.start-button {
  background: linear-gradient(135deg, #007AFF 0%, #0056CC 100%);
  color: white;
  border: none;
  border-radius: 28rpx;
  padding: 32rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s ease;
}

.start-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.2);
}

.start-button::after {
  border: none;
}

.button-text {
  font-size: 32rpx;
  font-weight: 600;
}

.button-arrow {
  font-size: 28rpx;
  font-weight: 600;
  transition: transform 0.2s ease;
}

.start-button:active .button-arrow {
  transform: translateX(8rpx);
}

/* 记录列表 */
.records-list {
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 记录卡片 */
.record-card {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #F2F2F7;
  transition: all 0.3s ease;
  animation: slideUp 0.6s ease both;
}

.record-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: #F8F9FA;
  border-bottom: 2rpx solid #F2F2F7;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.material-badge {
  background: linear-gradient(135deg, #007AFF 0%, #0056CC 100%);
  color: white;
  font-size: 26rpx;
  font-weight: 600;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
}

.advanced-badge {
  background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
  color: white;
  font-size: 22rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.header-right {
  display: flex;
  align-items: center;
}

.record-time {
  font-size: 26rpx;
  color: #86868B;
  font-weight: 500;
}

/* 卡片主体 */
.card-body {
  padding: 32rpx;
}

/* 主要结果 */
.main-result {
  text-align: center;
  margin-bottom: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
  border-radius: 20rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.main-result::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
}

.result-label {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

.result-display {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 12rpx;
  position: relative;
  z-index: 1;
}

.result-number {
  font-size: 64rpx;
  font-weight: 800;
  line-height: 1;
  letter-spacing: -2rpx;
}

.result-unit {
  font-size: 32rpx;
  font-weight: 600;
  opacity: 0.9;
}

/* 详细信息区域 */
.details-section {
  margin-bottom: 32rpx;
}

.detail-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 24rpx;
}

.detail-icon {
  font-size: 32rpx;
  width: 48rpx;
  text-align: center;
}

.detail-content {
  flex: 1;
}

.detail-label {
  font-size: 24rpx;
  color: #86868B;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #1D1D1F;
  font-weight: 600;
}

/* 房间区域 */
.rooms-section {
  margin-bottom: 24rpx;
}

.rooms-label {
  font-size: 26rpx;
  color: #86868B;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.room-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.room-tag {
  background: rgba(0, 122, 255, 0.1);
  color: #007AFF;
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  border: 2rpx solid rgba(0, 122, 255, 0.2);
}

/* 卡片底部 */
.card-footer {
  display: flex;
  border-top: 2rpx solid #F2F2F7;
  background: #FAFAFA;
}

.action-button {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 16rpx;
  background: transparent;
  border: none;
  border-right: 2rpx solid #F2F2F7;
  transition: all 0.2s ease;
  font-size: 24rpx;
  font-weight: 500;
}

.action-button:last-child {
  border-right: none;
}

.action-button:active {
  background: #E5E5EA;
  transform: scale(0.95);
}

.action-button::after {
  border: none;
}

.action-button.recalc {
  color: #007AFF;
}

.action-button.copy {
  color: #34C759;
}

.action-button.delete {
  color: #FF3B30;
}

.action-icon {
  font-size: 28rpx;
}

.action-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E5E5EA;
  border-top: 4rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #86868B;
  font-weight: 500;
}

/* 加载更多 */
.load-more-section {
  padding: 40rpx;
  text-align: center;
}

.load-more-button {
  background: #F8F9FA;
  color: #007AFF;
  border: 2rpx solid #E5E5EA;
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.3s ease;
  margin: 0 auto;
}

.load-more-button:active {
  background: #E5E5EA;
  transform: scale(0.95);
}

.load-more-button:disabled {
  color: #86868B;
  background: #F0F0F0;
  border-color: #E5E5EA;
}

.load-more-button::after {
  border: none;
}

.load-more-text {
  font-size: 28rpx;
  font-weight: 600;
}

.load-more-icon {
  font-size: 24rpx;
  font-weight: 600;
  transition: transform 0.2s ease;
}

.load-more-button:active .load-more-icon {
  transform: translateY(4rpx);
}

/* 安全区域 */
.safe-area-bottom {
  height: 40rpx;
}

/* 动画效果 */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes spin {
  0% { 
    transform: rotate(0deg); 
  }
  100% { 
    transform: rotate(360deg); 
  }
}

@keyframes pulse {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.3;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0.1;
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .nav-title {
    font-size: 44rpx;
  }
  
  .result-number {
    font-size: 56rpx;
  }
  
  .result-unit {
    font-size: 28rpx;
  }
  
  .detail-item {
    padding: 20rpx;
  }
}