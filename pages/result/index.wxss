/* iOS 风格图标样式 */
.ios-icon {
  font-size: 20rpx;
  line-height: 1;
  display: inline-block;
}

/* 容器样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F8F9FA 0%, #FFFFFF 100%);
  padding-bottom: 40rpx;
}

/* 顶部导航栏 */
.nav-header {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  background: #FFFFFF;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.nav-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 8rpx;
}

.nav-subtitle {
  font-size: 28rpx;
  color: #86868B;
  font-weight: 400;
}

/* 结果卡片 */
.result-card {
  margin: 0 40rpx 40rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.result-header {
  padding: 32rpx;
  background: linear-gradient(135deg, #007AFF 0%, #0056CC 100%);
  color: #FFFFFF;
  display: flex;
  align-items: center;
}

.result-header .ios-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.result-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: 600;
}

.result-status {
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.result-status.success {
  background: #34C759;
}

.result-content {
  padding: 32rpx;
}

/* 基础信息 */
.info-section {
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F2F2F7;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #86868B;
}

.info-label .ios-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1D1D1F;
}

/* 计算结果 */
.calculation-results {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.result-item {
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.result-item.primary {
  background: linear-gradient(135deg, #007AFF08 0%, #007AFF15 100%);
  border: 2rpx solid #007AFF20;
}

.result-item.highlight {
  background: linear-gradient(135deg, #34C75908 0%, #34C75915 100%);
  border: 2rpx solid #34C75920;
}

.result-label {
  font-size: 28rpx;
  color: #86868B;
  font-weight: 500;
}

.result-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #1D1D1F;
}

.result-item.primary .result-number {
  color: #007AFF;
}

.result-item.highlight .result-number {
  color: #34C759;
}

.result-unit {
  font-size: 24rpx;
  color: #86868B;
  margin-left: 8rpx;
}

/* 成本估算 */
.cost-section {
  border-top: 1rpx solid #F2F2F7;
  padding-top: 32rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 24rpx;
}

.section-title .ios-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.cost-breakdown {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.cost-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.cost-label {
  font-size: 28rpx;
  color: #86868B;
}

.cost-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.cost-value.total {
  color: #FF3B30;
  font-size: 36rpx;
}

/* 高级功能 */
.advanced-features {
  margin: 0 40rpx 40rpx;
}

.feature-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-top: 24rpx;
}

.feature-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  border: 2rpx solid #F2F2F7;
  transition: all 0.3s ease;
}

.feature-card:active {
  transform: scale(0.95);
  background: #F8F9FA;
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  display: block;
}

.feature-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #86868B;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 24rpx;
  margin: 0 40rpx 40rpx;
}

.secondary-button, .primary-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.secondary-button {
  background: #F2F2F7;
  color: #1D1D1F;
}

.secondary-button:active {
  background: #E5E5EA;
}

.primary-button {
  background: linear-gradient(135deg, #007AFF 0%, #0056CC 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 32rpx rgba(0, 122, 255, 0.3);
}

.primary-button:active {
  transform: scale(0.98);
}

.secondary-button::after,
.primary-button::after {
  border: none;
}

.secondary-button .ios-icon,
.primary-button .ios-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

/* 重新计算 */
.recalc-section {
  margin: 0 40rpx;
}

.recalc-button {
  width: 100%;
  background: transparent;
  color: #007AFF;
  border: 2rpx solid #007AFF;
  border-radius: 20rpx;
  padding: 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.recalc-button:active {
  background: #007AFF08;
}

.recalc-button::after {
  border: none;
}

.recalc-button .ios-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

/* 免责声明 */
.disclaimer {
  margin: 0 40rpx 40rpx;
  background: #FFF9E6;
  border: 2rpx solid #FFD60A;
  border-radius: 16rpx;
  padding: 24rpx;
}

.disclaimer-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #FF9500;
  margin-bottom: 12rpx;
}

.disclaimer-title .ios-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.disclaimer-text {
  font-size: 24rpx;
  color: #8B6914;
  line-height: 1.5;
}