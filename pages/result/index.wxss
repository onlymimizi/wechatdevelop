.container {
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* 成功头部 */
.success-header {
  background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
  padding: 60rpx 32rpx;
  text-align: center;
  color: #FFFFFF;
  margin-bottom: 32rpx;
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  font-weight: 700;
  margin: 0 auto 24rpx;
  backdrop-filter: blur(10rpx);
}

.success-title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  letter-spacing: -0.5rpx;
}

.success-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  font-weight: 500;
}

/* 广告区域 */
.ad-section {
  margin: 0 32rpx 32rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background: #F2F2F7;
}

/* 主要结果卡片 */
.result-card {
  background: linear-gradient(135deg, #007AFF 0%, #5AC8FA 100%);
  border-radius: 32rpx;
  margin: 0 32rpx 32rpx;
  padding: 48rpx 40rpx;
  color: #FFFFFF;
  box-shadow: 0 16rpx 48rpx rgba(0, 122, 255, 0.3);
}

.result-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  opacity: 0.9;
}

.main-result {
  text-align: center;
  margin-bottom: 40rpx;
}

.result-amount {
  font-size: 80rpx;
  font-weight: 800;
  line-height: 1;
  letter-spacing: -2rpx;
}

.result-unit {
  font-size: 32rpx;
  font-weight: 600;
  margin-left: 16rpx;
  opacity: 0.9;
}

.result-breakdown {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 32rpx;
  backdrop-filter: blur(10rpx);
}

.breakdown-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.breakdown-item:last-child {
  margin-bottom: 0;
}

.breakdown-label {
  font-size: 28rpx;
  font-weight: 500;
  opacity: 0.9;
}

.breakdown-value {
  font-size: 30rpx;
  font-weight: 600;
}

/* 详细信息网格 */
.detail-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.detail-card {
  background: #F2F2F7;
  border-radius: 20rpx;
  padding: 24rpx;
  text-align: center;
}

.detail-label {
  font-size: 26rpx;
  color: #8E8E93;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #1C1C1E;
  font-weight: 600;
}

/* 房间网格 */
.room-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.room-card {
  background: #F2F2F7;
  border-radius: 20rpx;
  padding: 24rpx;
  text-align: center;
}

.room-name {
  font-size: 28rpx;
  color: #1C1C1E;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.room-dimensions {
  font-size: 24rpx;
  color: #8E8E93;
  margin-bottom: 8rpx;
}

.room-area {
  font-size: 26rpx;
  color: #007AFF;
  font-weight: 600;
}

.room-deduct {
  font-size: 22rpx;
  color: #FF3B30;
  margin-top: 4rpx;
}

/* 提示卡片 */
.tips-card {
  background: #FFF3CD;
  border-radius: 24rpx;
  margin: 0 32rpx 32rpx;
  padding: 32rpx;
  border: 2rpx solid #FFE69C;
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.tips-title {
  font-size: 32rpx;
  color: #856404;
  font-weight: 600;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
}

.tip-dot {
  color: #856404;
  font-size: 28rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 26rpx;
  color: #856404;
  line-height: 1.5;
  flex: 1;
}

/* 操作区域 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, #FFFFFF 0%, #FFFFFF 80%, rgba(255, 255, 255, 0.9) 100%);
  padding: 32rpx;
  backdrop-filter: blur(20rpx);
}

.action-row {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 16rpx;
  border-radius: 20rpx;
  border: none;
  font-weight: 600;
  transition: all 0.2s ease;
}

.action-btn.secondary {
  background: #F2F2F7;
  color: #007AFF;
}

.action-btn.primary {
  background: #007AFF;
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
}

.action-btn:active {
  transform: scale(0.95);
}

.action-icon {
  font-size: 32rpx;
}

.action-text {
  font-size: 24rpx;
  font-weight: 600;
}

/* Canvas */
.share-canvas {
  position: fixed;
  top: -2000rpx;
  left: -2000rpx;
  z-index: -1;
}